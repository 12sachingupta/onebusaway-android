<?xml version="1.0" encoding="utf-8"?>
<TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_column="0">
                <ImageButton
                        android:id="@+id/eta_route_favorite"
                        android:src="@drawable/ic_toggle_star"
                        android:contentDescription="@string/stop_info_favorite"
                        android:background="?attr/selectableItemBackground"
                        android:maxHeight="14dp"
                        android:maxWidth="14dp"
                        android:minHeight="14dp"
                        android:minWidth="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="@dimen/keyline_1"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:gravity="center"/>
                <ImageButton
                        android:id="@+id/reminder"
                        android:src="@drawable/ic_action_announcement"
                        android:contentDescription="@string/trip_info_reminder_content_description"
                        android:background="?attr/selectableItemBackground"
                        android:maxHeight="14dp"
                        android:maxWidth="14dp"
                        android:minHeight="14dp"
                        android:minWidth="14dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_marginLeft="@dimen/keyline_1"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:gravity="center"
                        android:visibility="gone"/>
        </LinearLayout>

    <TextView
            android:id="@+id/eta_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_column="1"
            android:gravity="center"
            android:textSize="35sp"
            android:text="5"
            android:textColor="@color/header_text_color"/>

    <TextView
            android:id="@+id/eta_route_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="left"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:text="Aurora Village Via Aurora Ave."
            android:textColor="@color/header_text_color"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
                android:id="@+id/eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:textSize="35sp"
                android:text="2"
                android:textColor="@color/header_text_color"
                android:ellipsize="end"
                android:singleLine="true"/>

        <ImageButton
                android:id="@+id/eta_more_vert"
                android:src="@drawable/ic_navigation_more_vert"
                android:contentDescription="@string/stop_info_item_options_title"
                android:background="?attr/selectableItemBackground"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_column="4"
                android:gravity="center_vertical"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="6dp"
                android:maxHeight="18dp"
                android:maxWidth="18dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
</TableRow>