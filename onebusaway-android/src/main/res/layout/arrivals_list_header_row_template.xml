<?xml version="1.0" encoding="utf-8"?>
<TableRow
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical">
    <ImageButton
            android:id="@+id/eta_route_favorite"
            android:src="@drawable/ic_toggle_star"
            android:contentDescription="@string/stop_info_favorite"
            android:background="@drawable/selectable_background_busbot"
            android:maxHeight="10dp"
            android:maxWidth="10dp"
            android:minHeight="10dp"
            android:minWidth="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_column="0"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:gravity="center"/>

    <TextView
            android:id="@+id/eta_route_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:gravity="center"
            android:textSize="35sp"
            android:text="5"
            android:textColor="@color/header_text_color"/>

    <TextView
            android:id="@+id/eta_route_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:gravity="left"
            android:layout_marginLeft="8dp"
            android:textSize="16sp"
            android:text="Aurora Village Via Aurora Ave."
            android:textColor="@color/header_text_color"
            android:ellipsize="end"
            android:singleLine="true"/>

        <TextView
                android:id="@+id/eta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_marginLeft="5dp"
                android:gravity="right"
                android:textSize="35sp"
                android:text="2"
                android:textColor="@color/header_text_color"
                android:ellipsize="end"
                android:singleLine="true"/>

        <ImageButton
                android:id="@+id/eta_more_vert"
                android:src="@drawable/ic_navigation_more_vert"
                android:contentDescription="@string/stop_info_item_options_title"
                android:background="@drawable/selectable_background_busbot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:gravity="right"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                android:maxHeight="16dp"
                android:maxWidth="16dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>
</TableRow>