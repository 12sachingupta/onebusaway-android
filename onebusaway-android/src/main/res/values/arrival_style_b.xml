<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Arrivals list styles -->
    <style name="ArrivalsListItemRouteName">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ArrivalsListItemDestination">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ArrivalsListLabel">
        <item name="android:background">@color/theme_primary</item>
        <item name="android:paddingRight">20dp</item>
    </style>
    <style name="ArrivalsListLabelText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ArrivalsListNextTime">
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
    <style name="ArrivalsListNextTimeETA">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/stop_info_estimated_time_style_b</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ArrivalsListNextTimeSched">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ArrivalsListSched">
        <item name="android:textSize">12sp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    <style name="ArrivalsListETA">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/stop_info_estimated_time_style_b</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
    </style>
    <!--
    <style name="ArrivalsListStatusLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">2dp</item>
    </style>
    -->
    <style name="ArrivalsListStatusLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">2dp</item>
    </style>
    <style name="ArrivalsListStatusSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/header_text_faded_color</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
</resources>